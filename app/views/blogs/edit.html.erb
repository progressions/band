<%= calendar_date_select_includes "silver" %>
<%= javascript_include_tag :fckeditor %>

<% @page_title = "Edit blog post" %>

<h1>Edit post</h1>

<%= preview @blog, params %>

<%= error_messages_for :blog %>

<% form_for(@blog) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>
  
  <% if @edit_html %>
  
    <%= f.text_area :body %>
  
  <% else %>

    <%= fckeditor_tag("blog") %>

  <% end %>

  <p>
    <%= f.label(:thumbnail, "Thumbnail image URL") %>
    (should be 215x100)
    <br />
    <%= f.text_field :thumbnail %>
  </p>
  
  <p> 
    Blog post date:
    <%= calendar_date_select(:blog, :posted_at, :embedded => true, :time => false) %>
  </p>
  
  <p>
    <%= f.check_box :active %>
    <%= f.label :active %>
  </p>


  <p>
    <%= f.submit "Preview", :name => "preview_button" %>
    <%= f.submit "Update" %>
  </p>
<% end %>

