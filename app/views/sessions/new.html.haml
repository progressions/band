
- if flash[:notice] 
  #notice
    %p= flash[:notice]

#sessions

  - form_tag sessions_path do
    %p= label_tag :login, "Email address"
    = text_field_tag 'login' 

    %p= label_tag :password, "Password"
    = password_field_tag 'password' 

    %p
      = check_box_tag 'remember_me' 
      = label_tag :remember_me, "Remember me"
    
    %p= submit_tag 'Log in' 
