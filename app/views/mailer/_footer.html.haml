#footer
  %p= link_to @global_settings.artist_name, @global_settings.url

  %p{:style => "font-size: 0.8em"} 
    = "You are receiving these emails because #{@fan.email} is subscribed to the #{@global_settings.artist_name} mailing list. If you do not want to receive these emails, you can #{link_to 'unsubscribe here', unsubscribe_url(@fan, :f => @fan.crypted_email)} or reply to this email with the word \"unsubscribe\" in the title."