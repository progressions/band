<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
		<%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
		<%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
		<%= f.label :password %><br />
    <%= f.text_field :password %>
  </p>
  <p>
		<%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
